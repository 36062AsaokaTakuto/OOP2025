<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="700" Width="1000">
    <Grid x:Name="MainGrid" Margin="0">
        <!-- ✅ ColumnDefinitions は最初に配置 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- アニメーション用レイヤー（最背面） -->
        <Canvas x:Name="AnimationCanvas" IsHitTestVisible="False"/>

        <!-- 左側：検索ボックス＋リスト -->
        <StackPanel Grid.Column="0" Margin="15">
            <TextBox x:Name="SearchBox" Height="35"
                     Text="都道府県を入力してください" Foreground="Gray"
                     FontSize="14" Padding="5"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"
                     TextChanged="SearchBox_TextChanged"/>
            <ComboBox x:Name="PrefectureList" Height="35"
                     SelectionChanged="PrefectureList_SelectionChanged"
                     Background="White" BorderBrush="Gray" BorderThickness="1"
                     FontSize="14" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- 右側：天気表示 -->
        <StackPanel Grid.Column="1" Margin="20">

            <!-- 現在の天気パネル -->
            <Border Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentWeatherIcon}" FontSize="48" Margin="0,0,20,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentTemperature}" FontSize="32" Foreground="#E53935"/>
                        <TextBlock Text="{Binding CurrentCondition}" FontSize="18" Foreground="#555"/>
                        <TextBlock Text="{Binding CurrentHumidity}" FontSize="14" Foreground="#1E88E5"/>
                        <TextBlock Text="{Binding CurrentWind}" FontSize="14" Foreground="#43A047"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 気温推移カード（横スクロール） -->
            <TextBlock Text="気温推移" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ScrollViewer Height="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="TempGraph">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.25"/>
                                </Border.Effect>
                                <StackPanel>
                                    <!-- 時刻 -->
                                    <TextBlock Text="{Binding DisplayTime}" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>

                                    <!-- 気温 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="🌡️" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding TemperatureDisplay}" FontSize="14" Foreground="#E53935"/>
                                    </StackPanel>

                                    <!-- 降水確率 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="💧" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding PrecipitationDisplay}" FontSize="14" Foreground="#1E88E5"/>
                                    </StackPanel>

                                    <!-- 風速 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="🌪️" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding WindSpeedDisplay}" FontSize="14" Foreground="#43A047"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>

            <!-- 湿度カード -->
            <TextBlock Text="湿度" FontSize="20" FontWeight="Bold" Margin="20,20,0,10"/>
            <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💧" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock x:Name="HumidityText" FontSize="18" Foreground="#1E88E5"/>
                </StackPanel>
            </Border>

            <!-- 風速・風向きカード -->
            <TextBlock Text="風速・風向き" FontSize="20" FontWeight="Bold" Margin="20,20,0,10"/>
            <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🌪️" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock x:Name="WindSpeedText" FontSize="16" Foreground="#43A047" Margin="0,0,20,0"/>
                    <TextBlock x:Name="WindDirectionText" FontSize="16" Foreground="#555"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
